<div class="container">
  <h1>入退室記録アプリ</h1>
  <div class="row mb-5">
    <div class="col-sm-6">
      <h2>ユーザー一覧</h2>
      <%= form_with url: "/entry" do |f| %>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>名前</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= f.label :name, user.name %></td>
                <td><%= f.radio_button :name, user.name ,class: "text-center"%></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= f.submit "入室", class: "btn btn-secondry" %>
      <% end %>
    </div>
    <div class="col-sm-6">
      <h2>入室者一覧</h2>
      <% if @records_in_room.empty? %>
        <p>入室者なし</p>
      <% else %>
        <%= form_with url: "/exit" do |f| %>
          <table class="table table-striped">
            <thead>
              <tr>
                <th>名前</th>
                <th>入室時間</th>
                <th>退室</th>
              </tr>
            </thead>
            <tbody>
              <% @records_in_room.each do |record| %>
                <tr>
                  <td><%= f.label :name, User.find_by(id:record.user_id).name %></td>
                  <td><%= record.created_at %></td>
                  <td>
                    <%= f.radio_button :name, User.find_by(id:record.user_id).name %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= f.submit "退室", class: "btn btn-secondary" %>
        <% end %>
      <% end %>
    </div>
  </div>
  <h2>管理</h2>
  <a href="/users">ユーザー一覧</a>
  <br>
  <a href="/users/new">ユーザー追加</a>
  <br>
  <!-- <a href="/static_pages/help">マニュアル（準備中）</a> 
  <br> -->
  <a href="/records/index">入退室一覧</a>
</div>
